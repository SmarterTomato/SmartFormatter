{
	"name": "smart-formatter",
	"displayName": "SmartFormatter",
	"description": "A VS Code extension formats string in anyway you like.",
	"version": "1.0.0",
	"engines": {
		"vscode": "^1.46.0"
	},
	"categories": [
		"Formatters",
		"Other"
	],
	"publisher": "SmarterTomato",
	"author": {
		"name": "Smarter Tomato"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/SmarterTomato/SmartFormatter.git"
	},
	"homepage": "https://github.com/SmarterTomato/SmartFormatter/blob/master/README.md",
	"bugs": {
		"url": "https://github.com/SmarterTomato/SmartFormatter/issues",
		"email": "smartertomato@gmail.com"
	},
	"license": "MIT",
	"activationEvents": [
		"onCommand:smartFormatter.formatToString",
		"onCommand:smartFormatter.formatFromString",
		"onCommand:smartFormatter.escape",
		"onCommand:smartFormatter.unescape"
	],
	"icon": "resources/images/icon.png",
	"main": "./out/extension.js",
	"contributes": {
		"commands": [{
				"command": "smartFormatter.formatToString",
				"title": "Format to String",
				"category": "Smart Formatter"
			},
			{
				"command": "smartFormatter.formatFromString",
				"title": "Format from String",
				"category": "Smart Formatter"
			},
			{
				"command": "smartFormatter.escape",
				"title": "Escape",
				"category": "Smart Formatter"
			},
			{
				"command": "smartFormatter.unescape",
				"title": "Unescape",
				"category": "Smart Formatter"
			}

		],
		"menus": {
			"editor/context": [{
					"command": "smartFormatter.formatToString",
					"group": "1_smartFormatter@0"
				},
				{
					"command": "smartFormatter.formatFromString",
					"group": "1_smartFormatter@1"
				},
				{
					"command": "smartFormatter.escape",
					"group": "1_smartFormatter@2"
				},
				{
					"command": "smartFormatter.unescape",
					"group": "1_smartFormatter@3"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.46.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.30.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	}
}
